<!DOCTYPE html>
<html lang="es">

  <%- include('partials/head') %>
  
<body>
    
  <!--HEADER-->
  <%- include('partials/header') %>

   <!--BANNER-->
<div class="index">
  <div class="banner">
    <section id="banner-container" class="position-relative text-light">
      <div id="banner-background"></div>
      <div id="banner-content" class="container h-100">
        <div class="row no-gutters h-100 d-flex">
          <div id="banner-text" class="col-md-6 align-self-center">
            <h1 class="display-1 font-weight-bold mb-4">Mira nuestras ofertas</h1>
            <p class="lead mb-5">El lugar donde vas a encontrar la mayor variedad de juguetes para divertir a niños de 4 a 99 años.
            </p>

          <!--<% if(typeof user!='undefined'){%> 
            <p> <% user.email %> </p>
          <% } %> -->
          
            <a href="products" class="btn btn-primary">Nuestros productos</a>
          </div>
          <div class="col-md-6 img-container align-self-center h-100">
            <!--carrousel-->
            <section>
              <div id="banner-img" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <a href=""><img src="/images/logos/logo.png" class="d-block w-100" alt="..."></a>                    
                  </div>
                  <div class="carousel-item">
                    <a href="products/detalle/17"><img src="/images/products/mrPapa2.png" class="d-block w-100" alt="..."></a>                    
                  </div>
                  <div class="carousel-item">
                    <a href="products/detalle/18"><img src="/images/products/PiniPoyDelivery.png" class="d-block w-100" alt="..."></a>
                  </div>
                  <div class="carousel-item">
                    <a href="products/detalle/22"><img src="/images/products/babyCry3.png" class="d-block w-100" alt="..."></a>
                  </div>
                </div>
              </div>
            </section>
            <!--  <img src="/images/logo.png" id="hero-img" class="position-absolute">  --> 
            <img src="/images/lines.svg" id="lines" class="spin position-absolute">
          </div>
        </div>
      </div>
    </section>
  </div>
</div>

  <div class="conteiner cuerpo">
    <!--OFERTAS-->
    <h2>Algunas de nuestras ofertas</h2>
    <div class="container">
      <section class="listadoProductos"> 
        <div class="row productos">
          
          <% productosOfertas.forEach(producto => { %>
            
              <div class="producto col-sm-12 col-md-6 col-lg-3 box-image vl">
                <a href="/products/detalle/<%= producto.id %> ">
                  <figure class="text-center">
                      <img  src="../../images/products/<%= (producto.fotos.split(','))[0] %>" alt="">
                  </figure>
                  </a>    
                <h3 id="nombre"><%- producto.nombre %></h3>
                <div class="price-box price-final_price" style="display: inline-flex;">
                <strong><span style="color:  rgb(85, 6, 142);" class="price-container">$ <%- (producto.precio - producto.precio * producto.descuento / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></span></strong><br>
                <% if (producto.descuento != 0) { %>
                <small> <span class="d-inline p-2 bg-success text-white" style="color: var(--color-celeste); margin-left: 3rem;" class="discount"><%- producto.descuento %>% OFF</span></small>
                  
            
              <% } %>
              </div>
                <p id="descripcion"><%- producto.descripcion %></p>

                <div class="container-cart">
                <div class="card-header text-right align-bottom" >
                  <small class="text-muted "><a style="color:  rgb(85, 6, 142);"class="container-cart" href="#">Agregar al carrito <i class="fas fa-angle-double-right"></i><i style="color:  rgb(85, 6, 142);" class="fas fa-cart-plus"></i></a></small>
                </div>  
                
              </div>
              </div>
              <div class="editar">
                  <% if (typeof usuario != "undefined" && usuario.rol=="admin") { %>
                      <button class="btn btn-warning"><a href="/products/show/<%= producto.id %>">Editar</a></button>
                  <% } %>                                
              </div>
            <% }) %> 
        </div>
      </section>
    </div>
    <!--SEPARADOR-->
    <div class="index">
      <div class="separador">
        <section class="cards-banner-one">
          <div class="content">
            <h2>Mira todas nuestras categorías</h2>
            <p>Descubrilas cliqueando en el siguiente link</p>
            <a href="categories" class="btn">Categorías<i class="fas fa-chevron-right"></i></a>
          </div>
        </section>
      </div>
    </div>
    <!--MAS COMPRADOS-->
    <h2>Los mas comprados</h2>

    <div class="container">
      <section class="listadoProductos">
        <div class="row productos">
          
          <% productosCampaña.forEach(producto => { %>
            
              <div class="producto col-sm-12 col-md-6 col-lg-3 box-image vl">
                <a href="/products/detalle/<%= producto.id %> ">
                  <figure class="text-center">
                      <img  src="../../images/products/<%- producto.fotos %> " alt="">
                  </figure>
                  </a>    
                <h3 id="nombre"><%- producto.nombre %></h3>
                <div class="price-box price-final_price" style="display: inline-flex;">
                <strong><span style="color:  rgb(85, 6, 142);" class="price-container">$ <%- (producto.precio - producto.precio * producto.descuento / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></span></strong><br>
                <% if (producto.descuento != 0) { %>
                <small> <span class="d-inline p-2 bg-success text-white" style="color: var(--color-celeste); margin-left: 3rem;" class="discount"><%- producto.descuento %>% OFF</span></small>
                  
            
              <% } %>
              </div>
                <p id="descripcion"><%- producto.descripcion %></p>

                <div class="container-cart">
                <div class="card-header text-right align-bottom" >
                  <small class="text-muted "><a style="color:  rgb(85, 6, 142);"class="container-cart" href="#">Agregar al carrito <i class="fas fa-angle-double-right"></i><i style="color:  rgb(85, 6, 142);" class="fas fa-cart-plus"></i></a></small>
                </div>  
                
              </div>
              </div>
              <div class="editar">
                  <% if (typeof usuario != "undefined" && usuario.rol=="admin") { %>
                      <button class="btn btn-warning"><a href="/products/show/<%= producto.id %>">Editar</a></button>
                  <% } %>                                
              </div>
            <% }) %> 
        </div>
      </section>
    </div>
  </div>
</div>
  <!--FOOTER-->
  <%- include('partials/footer') %>
  <!--FINALIZA FOOTER-->
  

<!--scroll reveal-->
<script src="https://unpkg.com/scrollreveal"></script>

</body>
<script>
  window.onload = function () {
    setTimeout(function () {
      document.getElementById('banner-background').style.width = '100%';
    }, 1500);
    setTimeout(function () {
      document.getElementById('banner-text').style.opacity = '1';
    }, 2500);
    setTimeout(function () {
      document.getElementById('banner-img').style.opacity = '1';
    }, 3500);
    setTimeout(function () {
      document.getElementById('lines').style.opacity = '1';
    },4500);
  };
  ScrollReveal().reveal('.cuerpo');
  ScrollReveal().reveal('.conteiner-productos',{delay: 500});
  ScrollReveal().reveal('.cards-banner-one',{delay: 500});
  ScrollReveal().reveal('.cards-banner-one',{delay: 500});
  
</script>

</html>
