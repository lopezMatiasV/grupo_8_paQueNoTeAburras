<!DOCTYPE html>
<html lang="en">
  
  <%- include('partials/head') %>
  <script src="/javascripts/usuarioRegistro.js"></script>
  <script src="/javascripts/usuarioLogin.js"></script>
  <script src="/javascripts/hiddenPassword.js"></script>
<body>
  

    <%- include('partials/header') %>
    

  <section id="jere"> 
    <div class="continer">
      <div class="user signinBx">
        <div class="imgBx"><img src="/images/logos/logoVerde.png"></div>
        <div class="formBx">
          <form action="/registro/login" method="POST" id="logueate" >
            <h2>Logueate</h2>
            <div id= "faceygog"  class="social-media">
             <button class="face" ><a href="#"><i class="facebook"></i>Facebook</a></button>
             <button class="google"><a href="#"><i class="google"></i>Google</a></button>
            </div>
            
             <input type="email" class="form-control" id="email2" aria-describedby="emailHelp" value="<%= (typeof old != 'undefined' && old.email)?old.email:'' %>" placeholder="email" name="email">
            <small id="errorEmail" class="text-danger"><%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "" %> </small>
            <input id="passLog" type="password" class="form-control"  placeholder="contraseña" name="pass">
            <small id="errorPass" class="text-danger"><%= (typeof errors != 'undefined' && errors.pass)?errors.pass.msg: "" %> </small>

              <div class="custom-control custom-checkbox my-1 mr-sm-2 custom-control-inline align-items-center">
            <input type="checkbox" class="custom-control-input" id="customControlInline" name="recordar">
            <label class="custom-control-label" for="customControlInline">Recordarme</label>
          </div>
        
          <button type="submit" class="btn btn-primary">Ingresar</button>
<br>
<br>
<br>
          <p class="signup">¿No tienes una cuenta?  <button type="button" id="field4" class="btn btn-success" onclick="toggleForm();">Crea una!</button></p>
            
          </form>
        </div>
      </div>
    
      <div class="user signupBx">
        <div class="formBx">
          <form action="/registro" method="POST" id="registro" enctype="multipart/form-data">
            <h2>Crea una Cuenta</h2>
            
            <input type="text" 
            class="form-control <%= (typeof old != 'undefined' && old.nombre)?"is-valid":(typeof errors != 'undefined' && errors.nombre)?"is-invalid": ""  %>" 
            id="usuario"  name="nombre"  value="<%= (typeof old != 'undefined' && old.nombre)?old.nombre:'' %>" placeholder="<%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "nombre" %>"/>
              <small id = "errorNombre" class="text-danger"><%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "" %> </small>

            <input type="text" 
            class="form-control <%= (typeof old != 'undefined' && old.apellido)?"is-valid":(typeof errors != 'undefined' && errors.apellido)?"is-invalid": ""  %>"  
            id="apellido" value="<%= (typeof old != 'undefined' && old.apellido)?old.apellido:'' %>" placeholder="<%= (typeof errors != 'undefined' && errors.apellido)?errors.apellido.msg: "apellido" %>" name="apellido"/>
            <small id = "errorApellido" class="text-danger"><%= (typeof errors != 'undefined' && errors.apellido)?errors.apellido.msg: "" %> </small>
            
            <input type="email" 
            class="form-control <%= (typeof old != 'undefined' && old.email && !errors.email)?"is-valid":(typeof errors != 'undefined' && errors.email)?"is-invalid": ""  %>" 
            id="email"  placeholder="<%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "email" %>" value="<%= (typeof old != 'undefined' && old.email)?old.email:'' %>" name="email"/>
              <small id="errorsEmail" class="text-danger"><%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "" %> </small>
           
              <input type="password" 
            class="form-control <%= (typeof errors != 'undefined' && errors.pass)?"is-invalid": ""  %> " 
            id="pass" placeholder="<%= (typeof errors != 'undefined' && errors.pass)?errors.pass.msg: "contraseña" %>"  name="pass"/>
           <small id="errorsPass" class="text-danger"><%= (typeof errors != 'undefined' && errors.pass)?errors.pass.msg: "" %> </small>
            

            <input type="password"
            class="form-control <%= (typeof errors != 'undefined' && errors.pass2)?"is-invalid": ""  %>" 
            id="pass2" placeholder="<%= (typeof errors != 'undefined' && errors.pass2)?errors.pass2.msg: "reingresar contraseña" %>" name="pass2"/>
            <small id="errorsPass2" class="text-danger"><%= (typeof errors != 'undefined' && errors.pass2)?errors.pass2.msg: "" %> </small>

            
            <div class="custom-file mt-4">
              <input type="file" class="custom-file-input " id="avatar" lang="es" name="avatar" multiple>
              <label class="custom-file-label" for="customFileLang">Seleccionar Archivo</label>
              <small id="errorFormato" class="text-danger"><%= (typeof error != 'undefined' && error.formato)?error.formato.msg: "" %> </small>
            </div>


          
            <div class="custom-control custom-checkbox my-1 mr-sm-2 custom-control-inline align-items-justify d-flex justify-content-around"">
               <input type="checkbox" class="custom-control-input" id="customCheck1" name="bases" value="off">
             <label class="custom-control-label" for="customCheck1" style="padding-right: 2rem;">Bases y condiciones</label><br>
              <small><a href=""  class="text-info" style="padding-right:2rem;">Ver bases y condiciones</a></small></small><br>
              
              <small id="errorsBases" class="text-danger"><%= (typeof errors != 'undefined' && errors.bases)?errors.bases.msg: "" %> </small>
            
              <!--       <input type="submit" name="" value="Confirmar">-->
              
              <div>    
              <button type="submit" class="btn btn-primary">Confirmar</button>

            <small class="text-danger"><%= (typeof errorFormato != 'undefined')?errorFormato: "" %> </small>
          </div> 
          </div>
          
          <p class="signup">¿Ya tienes una cuenta?  <button type="button" id="field2" class="btn btn-success" onclick="toggleForm();">Ingresar</button></p>
          
                   
          </form>
        </div>
        <div class="imgBx"><img src="/images/logos/logoRojo.png"></div>
      </div>
    </div>
  </section>
 
  
  <!--FOOTER: PIE DE PAGINA-->
  <%- include('partials/footer') %>

  
  <script type="text/javascript">
    function toggleForm(){
      var container = document.querySelector('.continer');
      container.classList.toggle('active')
    }
    </script>
</body>
</html>
