                        <input class="form-control" type="telefono" value="telefono" name="telefono">
                    </div>  
                    <div class="col-sm-6 col-md-6 col-lg-6">
                        <button class="btn btn-danger mr-2" type="reset">Cancelar</button>
                        <button class="btn btn-info" type="submit" name="id" value="">Editar</button>
                    </div>                                            
                </form>
           </div>
                
        </div>
   </div>
    
    <%- include('partials/footer') %>
</body>
</html>