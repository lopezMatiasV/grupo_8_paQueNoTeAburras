<!DOCTYPE html>
<html lang="en">
  
  <%- include('partials/head') %>
  
<body>
  

    <%- include('partials/header') %>
    

  <section id="jere"> 
    <div class="continer">
      <div class="user signinBx">
        <div class="imgBx"><img src="/images/logos/logoVerde.png"></div>
        <div class="formBx">
          <form>
            <h2>Logueate</h2>
            <div class="social-media">
             <button class="face" ><a href="#"><i class="facebook"></i>Facebook</a></button>
             <button class="google"><a href="#"><i class="google"></i>Google</a></button>
            </div>
            <input type="text" name="" placeholder="Nombre de Usuario">
            <input type="password" name="" placeholder="Contraseña">
            <input type="submit" name="" value="login">
            <p class="signup">¿No tienes una cuenta?<a href="#" onclick="toggleForm();" >Crear Cuenta</a></p>
          </form>
        </div>
      </div>
      <div class="user signupBx">
        <div class="formBx">
          <form>
            <h2>Crea una Cuenta</h2>
            <input type="text" name="" placeholder="Nombre de Usuario">
            <input type="email" name="" placeholder="Email">
            <input type="password" name="" placeholder="Crear Contraseña">
            <input type="password" name="" placeholder="Confirmar Contraseña">
            <input type="submit" name="" value="Sign Up">
            <p class="sign in">¿Ya tienes una cuenta?<a href="#" onclick="toggleForm();">logueate</a></p>
          </form>
        </div>
        <div class="imgBx"><img src="/images/logos/logoRojo.png"></div>
      </div>
    </div>
  </section>
 
  
  <!--FOOTER: PIE DE PAGINA-->
  <%- include('partials/footer') %>

  
  <script type="text/javascript">
    function toggleForm(){
      var container = document.querySelector('.continer');
      container.classList.toggle('active')
    }
    </script>
</body>
</html>
